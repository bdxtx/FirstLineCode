<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firstlinecode.datasave.SharePreferencesActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/saveInSharePreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用sharePreferences存储数据"/>
    <Button
        android:id="@+id/readInSharePreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用sharePreferences读取数据"/>

</LinearLayout>
